@model ML.Materias
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>GetAll</h2>
    </div>
    <hr />
    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Materias", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>
    <hr />
    <div class="row">
        @if (Model.Materias1 != null)
        {
            <table class="table table-dark table-bordered table-responsive table-hover" id="tblAlumno">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="d-none">IdMateria</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre</td>
                        <td class="text-center" style=" font-weight:bold;">Costo</td>
                        


                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (ML.Materias materia in Model.Materias1)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning" id="prueba" onmouseover="Animar()" href="@Url.Action("Form", "Materias", new { IdMateria = materia.IdMateria })"><i class="bi bi-pencil-square fa-beat" style="color: ghostwhite;"></i> </a></td>

                            <td class="d-none">@materia.IdMateria</td>
                            <td>@materia.Nombre</td>
                            <td>@materia.Costo</td>
                           



                            <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-erase" href="@Url.Action("Delete", "Materias", new { IdMateria = materia.IdMateria })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>


        }
        else
        {
            <div class="alert alert-danger" role="alert">Ocurrio un error al realizar la consulta </div>
        }
    </div>
</div>


